<assembly>
	<id>sgd</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${basedir}/target/app</directory>
			<outputDirectory>/app</outputDirectory>
			<includes>
		<!-- APP -->
			<!-- *Force.html and *Force.xml generated by GleGameParser will be copied to gleForce foler -->
			<!-- *Force.html and *Force.xml generated by GleGameParser will be copied to gleForce foler -->
		<!-- WEB -->
				<include>**/*</include>
			</includes>
		</fileSet>
		<!-- DBGAMES -->
		<fileSet>
			<directory>${basedir}/target</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>gamefiles/**/datafiles/*xml*.jar</include>
				<include>gamefiles/**/datafiles/*ghst*.jar</include>
				<include>gamefiles/**/datafiles/*.buildtag</include>
				<include>gamefiles/**/*.sql</include>
			</includes>
			<!-- excludes Force file and reveal.fil file, which may be big files and useless in SGD package -->
		</fileSet>
	</fileSets>
</assembly>
